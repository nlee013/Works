package com.day4;

public class Test20 {

	public static void main(String[] args) {
		
		int i, j;
		
		//나비모양 
		
		/*for(i = 0; i<=5; i++) {
			
			for(j = 1; j <= 5-i; j++) {
				
				System.out.print(" ");
			}
			
			for(j = 1; j <= i; j++) {
				
				System.out.print("*");
			}
			System.out.println();
		}
			
			

		for(i = 5; i >= 1; i--) { //i-- = i-1라는 의미.
			
			for(j = 1; j <= 5; j++) {
				
				System.out.print(" ");
			}
			
