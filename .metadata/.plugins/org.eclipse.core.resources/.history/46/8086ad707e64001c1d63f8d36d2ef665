		//삼각형 모양
		
		for(i = 1; i<=5; i++) {
			
			for(j = 1; j <= 5-i; j++) { //i*2-1 -> 무조건 홀수 나오는 공식.
				
				System.out.print(" ");
			}
			
			for(j = 1; j <= i*2-1; j++) {
				
				System.out.print("*");
			}
			System.out.println();
		}
		
		for(i = 5; i>=1; i--) {
			
			for(j = 1; j <= 5-i; j++) { //i*2-1 -> 무조건 홀수 나오는 공식.
				
				System.out.print(" ");
			}
			
			for(j = 1; j <= i*2-1; j++) {
				
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
