package com.day3;

import java.util.Scanner;

//Scanner는 단락 문자를 구분해서 데이터를 입력.
//기본 단락은 공백
public class Test12 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		String name;
		int kor, eng, mat;
		
		System.out.println("Type your 'Name' and scores of 'Korean', 'English', 'Mathematics'.");
		
		name = sc.next();
		kor = sc.nextInt();
		eng = sc.nextInt();
		mat = sc.nextInt();
		
		System.out.println(name + ":" + "Total Score is" + (kor + eng + mat));
	}

}
